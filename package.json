{
  "name": "@quaresma/rbac",
  "description": "A JS package to manage role-based access control (RBAC) that supports TypeScript and JSON serialization",
  "author": "Bruno Quaresma",
  "version": "0.1.0",
  "license": "MIT",
  "homepage": "https://github.com/BrunoQuaresma/rbac",
  "repository": {
    "type": "git",
    "url": "https://github.com/BrunoQuaresma/rbac"
  },
  "bugs": {
    "url": "https://github.com/BrunoQuaresma/rbac/issues"
  },
  "type": "module",
  "files": ["dist"],
  "main": "./dist/@quaresma/rbac.umd.cjs",
  "module": "./dist/@quaresma/rbac.js",
  "keywords": ["rbac", "typescript", "role", "permission", "access control"],
  "exports": {
    ".": {
      "import": "./dist/@quaresma/rbac.js",
      "require": "./dist/@quaresma/rbac.umd.cjs"
    }
  },
  "scripts": {
    "build": "tsc && vite build",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/node": "20.5.9",
    "typescript": "5.0.2",
    "vite": "4.4.5",
    "vite-plugin-dts": "3.5.3",
    "vitest": "0.34.3"
  }
}
